<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noInternetConnectionContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/noInternetConnectionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_error"
        android:gravity="center"
        android:padding="@dimen/spacing_2x"
        android:text="@string/no_internet_connection_title"
        android:textAppearance="@style/Text.Subheading.White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_6x"
        android:src="@drawable/ic_wifi_off"
        app:layout_constraintBottom_toTopOf="@id/buttonRetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noInternetConnectionLabel" />

    <TextView
        android:id="@+id/buttonRetry"
        style="@style/PrimaryContainedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retry_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>